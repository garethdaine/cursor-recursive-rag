{
  "name": "cursor-recursive-rag",
  "version": "0.3.0",
  "description": "Recursive RAG MCP server for Cursor IDE with dashboard and rules optimizer",
  "type": "module",
  "bin": {
    "cursor-rag": "bin/cursor-rag.js"
  },
  "main": "./dist/server/index.js",
  "scripts": {
    "build": "tsc && npm run copy-static",
    "copy-static": "mkdir -p dist/dashboard/public && cp -r src/dashboard/public/* dist/dashboard/public/",
    "dev": "tsx watch src/cli/index.ts",
    "start:server": "node dist/server/index.js",
    "restart": "./restart-rag.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release": "npm run build && git add -A && git commit -m \"chore: release v$(node -p \"require('./package.json').version\")\" && git tag v$(node -p \"require('./package.json').version\") && git push && git push --tags"
  },
  "keywords": [
    "cursor",
    "mcp",
    "rag",
    "recursive-rag",
    "vector-store",
    "embeddings"
  ],
  "author": "garethdaine",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@mendable/firecrawl-js": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@qdrant/js-client-rest": "^1.9.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "chromadb": "^1.8.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "ollama": "^0.5.0",
    "openai": "^4.50.0",
    "ora": "^8.0.0",
    "redis": "^4.6.0",
    "tiktoken": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  }
}
